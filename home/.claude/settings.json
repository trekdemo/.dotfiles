{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(git status:*)",
      "Bash(git rev-parse:*)",
      "Bash(git log:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(bin/rails:*)",
      "Bash(bin/restart)",
      "Bash(bin/rspec:*)",
      "Bash(bin/rubocop:*)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": []
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "say \"what next?\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/bin/claude-statusline.sh",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "atlassian@claude-plugins-official": true
  }
}
