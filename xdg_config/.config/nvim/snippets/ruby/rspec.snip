snippet describe
alias desc
options head
  describe '${1:functionality}' do
    ${0}
  end

snippet it
options head
  it '${1:test}' do
    ${0:TARGET}
  end

snippet let
  let(:${1:name}) { ${0:TARGET} }

snippet before
options head
alias be, bef
  before { ${0:TARGET} }

snippet after
options head
alias af, aft
  after { ${0:TARGET} }

snippet around
options head
alias ar, aro
  around do |example|
    ${1:#:before}
    example.run
    ${0:#:after}
  end

