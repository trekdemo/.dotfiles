#!/bin/sh

DATABASE="/Users/trek/Library/Application Support/Sparrow/gergo.sulymosi@gmail.com.sparrowdb/messages.db"
SQL="select unseen_count from mailbox where path = 'INBOX';"

COUNT=`sqlite3 "$DATABASE" "$SQL"`
EMPTY=◎
FULL=◉
ENVELOPE=✉

if [[ $COUNT -eq "0" ]]; then
  COUNT="#[fg=colour6]$EMPTY#[fg=colour7] $COUNT"
else
  COUNT="#[fg=colour9]$FULL#[fg=colour7] $COUNT"
fi

echo "$COUNT"

